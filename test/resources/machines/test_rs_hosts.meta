hosts:
    - hostname: 'a'
      hostgroup: 'aa'
      ip_address: 1.2.3.4
    - hostname: 'b'
      hostgroup: 'bb'
      ip_address: 1.2.3.4
    - hostname: 'c'
      hostgroup: 'cc'
      ip_address: 1.2.3.4
      run_selectors:
        exclude:
          - testrs5
    - hostname: 'd'
      hostgroup: 'dd'
      ip_address: 1.2.3.4
      run_selectors:
        include:
          - testrs5
        exclude:
          - ALL
    - hostname: 'e'
      hostgroup: 'ee'
      ip_address: 1.2.3.4
      run_selectors:
        include:
          - testrs1

directives:
    - directive: apt_upgrade
      run_selectors:
          exclude:
            - update_dnsservers      
    - directive: install_cron
      run_selectors:
          exclude:
            - ALL
          include:
            - update_dnsservers

      
